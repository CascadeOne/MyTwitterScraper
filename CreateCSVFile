mport java.io.FileWriter;
import java.util.ArrayList;
import java.util.List;
import au.com.bytecode.opencsv.CSVWriter;
public class CreateCSVFile
{
	List<String[]> localData = new ArrayList<String[]>();
	String localFileName = "";
	public CreateCSVFile(List<String[]> list, String fileName)
	{
		localData = list;
		localFileName = fileName;
	}
	public void makeFile()
	{
		try
		{
			CSVWriter writer = new CSVWriter(new FileWriter(localFileName));
			writer.writeAll(localData);
			writer.close();
			System.out.println("CSVWriter is closed...");//trace
		}
		catch(Exception err)
		{
			System.out.println("Error loading CSVWriter");
			err.printStackTrace(System.err);
		}
	}
}
